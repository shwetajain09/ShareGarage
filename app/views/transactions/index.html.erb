  <h2 class="pull-right"> <%= image_tag '/assets/bc.jpg',:size => '35x35' %>x<%=@my_token%></h2>
  <%=link_to 'Generate token',user_tokens_path(current_user), :method => :post%>
        <%if @transactions.size > 0%>
          <div class="row">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Date</th>                    
                    <th>Book</th>
                    <th>User</th>
                    <th>Status</th>

                  </tr>
                </thead>
                <tbody>
                  <% @transactions.each do |transaction| %>
                  <%response = get_user_specific_details(transaction)%>
                    <tr>
                      <td><%= transaction.created_at.strftime('%d-%b-%y') %></td>
                      <td><%= image_tag transaction.book.avatar.url(:thumb) %>
                      <%= transaction.book.title%></td>
                      <td>
                        <%=link_to user_path(response[:user]) do %>
                          <%= image_tag response[:user].avatar.url(:thumb) %><%=response[:user].full_name%>
                        <%end%>
                      </td>
                      <td>   
                        <i class="fa <%=response[:class]%>"></i>                     
                        <%=response[:redeem]%>
                        <%=response[:action]%>
                      </td>
                      <td>
                        
                     
                    </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
          <%= will_paginate @transactions , renderer: BootstrapPagination::Rails%>
        <%else%>
            <h2>No transactions made yet!</h2>
        <%end%>


  
