        <div class="row centered-form">
            <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <%= devise_error_messages! %>
                          
                            <div class="form-group">
                                <%= f.email_field :email, autofocus: true,:class=>"form-control input-sm", :placeholder=>"Email Address" %>
                            </div>

                            <div class="form-group">
                                <%= f.password_field :password, autocomplete: "off",:class=>"form-control input-sm", :placeholder=>"Password" %>
                            </div>

                            <% if devise_mapping.rememberable? -%>
                                <div class="form-group">
                                  <%= f.check_box :remember_me %>
                                  <%= f.label :remember_me %>
                                </div>
                              <% end -%>
                            <%= f.submit "Log In" ,:class=>"btn btn-info btn-block"%>
                        <% end %>

                <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
