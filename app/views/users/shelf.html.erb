<!-- Portfolio Grid Section -->

        <%if @books.count>0%>
            <div class="row">
                <%@books.each do |book|%>
                    <%= render partial: "books/book", :locals => {:book => book,:path => show_share_modal_book_path(book.google_id,:book_id=>book.id),:action_class =>"fa-share",:show_actions => true,:authors => book.authors.collect(&:name).join(','),:image_link => book.avatar.url(:medium)} %>
                <%end%>
            </div>
        <%else%>
            <h2>No books available</h2>
        <%end%>

	