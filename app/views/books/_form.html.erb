<%= form_for @book, :html => { :class => "form-horizontal book" } do |f| %>

  <% if @book.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :subtitle, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :subtitle, :class => 'form-control' %>
    </div>
    <%=f.error_span(:subtitle) %>
  </div>
  <div class="form-group">
    <%= f.label :link, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :link, :class => 'form-control' %>
    </div>
    <%=f.error_span(:link) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :json_details, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :json_details, :class => 'form-control' %>
    </div>
    <%=f.error_span(:json_details) %>
  </div>
  <div class="form-group">
    <%= f.label :publisher, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :publisher, :class => 'form-control' %>
    </div>
    <%=f.error_span(:publisher) %>
  </div>
  <div class="form-group">
    <%= f.label :published_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :published_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:published_date) %>
  </div>
  <div class="form-group">
    <%= f.label :isbn, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :isbn, :class => 'form-control' %>
    </div>
    <%=f.error_span(:isbn) %>
  </div>
  <div class="form-group">
    <%= f.label :language_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :language_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:language_id) %>
  </div>
  <div class="form-group">
    <%= f.label :count, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :count, :class => 'form-control' %>
    </div>
    <%=f.error_span(:count) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
