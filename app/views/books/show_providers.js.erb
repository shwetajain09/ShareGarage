modal = $('#app_modal');
modal.on('show.bs.modal', function (event) {
	<%if current_user.present?%>
		modal.find('.modal-title').text('Book owners');
		modal.find('.modal-body').html("<%= escape_javascript(render(:partial => 'providers_listing')) %>");
	<%else%>
		modal.find('.modal-body').html('<%= escape_javascript(render(:partial => "/users/sessions/form")) %>');
	  	modal.find('.modal-title').html("You just need to fill this stupid form!");
	<%end%>		
});

modal.modal('show');

