$('body').removeClass("loading");

var modal = $('#app_modal');
modal.on('show.bs.modal', function (event) {
  modal.find('.modal-footer').hide();
	<%if current_user.present?%>
		modal.find('.modal-title').text('Add Location');
		modal.find('.modal-body').html("<%= escape_javascript(render(:partial => 'add_location_form',:locals=>{:google_id => params[:id],:book_id => params[:book_id],:isbn => params[:isbn]})) %>");
	<%else%>
		modal.find('.modal-body').html('<%= escape_javascript(render(:partial => "/users/sessions/form")) %>');
	  	modal.find('.modal-title').html("You just need to fill this stupid form!");
	<%end%>
  
})


modal.modal('show');

