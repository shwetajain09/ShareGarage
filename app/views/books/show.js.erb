modal = $('#app_modal');
modal.on('show.bs.modal', function (event) {
	modal.find('.modal-title').text('<%=@book.title%>');
	modal.find('.modal-body').html("<%= escape_javascript(render(:partial => 'detail',:locals => {:book => @book ,:authors =>  (@book.authors.respond_to? :collect) ? @book.authors.collect(&:name).join(',') : @book.authors,
	:image_link => (@book.respond_to? :avatar) ? @book.avatar.url(:medium) : @book.image_link(:zoom => 2),
	:average_rating=>(@book.respond_to? :google_provided_rating) ? @book.google_provided_rating : @book.average_rating,:categories => (@book.respond_to? :tag_list) ? @book.tag_list : @book.categories})) %>");
	modal.find('.modal-footer').html('<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>');
	modal.find('.modal-footer').show();
})

$('#app_modal').modal('show');







