    <div class="row">
        <br>
        <div class="form-group">
            <div class="col-sm-12 col-md-12 col-lg-12">                
                <i class="fa fa-search fa-2x pull-left searchicon"></i><input type="search" class="form-control" id="search" placeholder="Filter items...">
            </div>
        </div>
    </div>    
<%=form_tag share_books_path,method: :post do %>
    <div class="row add-location">
        <div class="items-collection location-box">  
            <% @locations.each do |location| %>                        
                <div class="items col-xs-6 col-sm-3 col-md-3 col-lg-3">
                    <div class="info-block block-info clearfix">
                        <div  class="btn-group itemcontent"><!-- data-toggle="buttons" -->
                            <label class="btn btn-default ">
                                <div class="itemcontent">
                                    <input type="checkbox" name="location_ids[]" autocomplete="off" value=<%=location.id%> >
                                    <h6 class="" title ="<%= h location.name -%>"><%= h location.name.slice(0..9)-%></h6>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>                
            <% end %>
            <%if local_assigns.has_key? :google_id%>
                <%= hidden_field_tag 'google_id',google_id%>
            <%end%> 
        </div>
    </div>
    <br/>
    <div class="modal-footer">
        
        <div class="loading" style="display:none;">
                    <%= image_tag '/assets/loading.gif'%>
                    </div>
        <%=submit_tag :share,:class=>"btn btn-primary",:onclick => "$('.loading').show();"%>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
    
<%end%>



<script>
$(function () {
    $('#search').on('keyup', function () {
        var pattern = $(this).val();
        $('.items-collection .items').hide();
        $('.items-collection .items').filter(function () {
            return $(this).text().match(new RegExp(pattern, 'i'));
        }).show();
    });
});
</script>

